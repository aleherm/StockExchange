@model StockExchange.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", maxlength = 100 })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", maxlength = 100 })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", maxlength = 100 })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Your stocks</label>
        <div class="col-md-10">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.FP, new { @class = "control-label" })
                    @Html.EditorFor(m => m.FP, new { htmlAttributes = new { @class = "form-control", @Value = "0", @Min = "0", @Max = "1000000" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FPL, new { @class = "control-label" })
                    @Html.EditorFor(m => m.FPL, new { htmlAttributes = new { @class = "form-control", @Value = "0", @Min = "0", @Max = "1000000" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PGB, new { @class = "control-label" })
                    @Html.EditorFor(m => m.PGB, new { htmlAttributes = new { @class = "form-control", @Value = "0", @Min = "0", @Max = "1000000" } })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.FPC, new { @class = "control-label" })
                    @Html.EditorFor(m => m.FPC, new { htmlAttributes = new { @class = "form-control", @Value = "0", @Min = "0", @Max = "1000000" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FPA, new { @class = "control-label" })
                    @Html.EditorFor(m => m.FPA, new { htmlAttributes = new { @class = "form-control", @Value = "0", @Min = "0", @Max = "1000000" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DL24, new { @class = "control-label" })
                    @Html.EditorFor(m => m.DL24, new { htmlAttributes = new { @class = "form-control", @Value = "0", @Min = "0", @Max = "1000000" } })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AccountBalance, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.AccountBalance, new { @class = "form-control", @Value = "1000", @Min = "0", @Max = "1000000" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
